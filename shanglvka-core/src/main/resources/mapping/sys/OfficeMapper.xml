<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.slk.core.dao.sys.OfficeDao">
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="sys-Office-columns">
	    <![CDATA[
		`id` as `id`, `parent_id` as `parentId`, `parent_ids` as `parentIds`, `area_id` as `areaId`, `code` as `code`, `name` as `name`, `type` as `type`, `grade` as `grade`, `address` as `address`, `zip_code` as `zipCode`, `master` as `master`, `phone` as `phone`, `fax` as `fax`, `email` as `email`, `create_by` as `createBy`, `create_date` as `createDate`, `update_by` as `updateBy`, `update_date` as `updateDate`, `remarks` as `remarks`, `del_flag` as `delFlag`
	    ]]>
	</sql>	

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO sys_office (
        `id`, `parent_id`, `parent_ids`, `area_id`, `code`, `name`, `type`, `grade`, `address`, `zip_code`, `master`, `phone`, `fax`, `email`, `create_by`, `create_date`, `update_by`, `update_date`, `remarks`, `del_flag`
        ) VALUES (
        #{id}, #{parentId}, #{parentIds}, #{areaId}, #{code}, #{name}, #{type}, #{grade}, #{address}, #{zipCode}, #{master}, #{phone}, #{fax}, #{email}, #{createBy}, #{createDate}, #{updateBy}, #{updateDate}, #{remarks}, #{delFlag}        
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update">
    <![CDATA[
        UPDATE sys_office SET
	        `parent_id` = #{parentId} , `parent_ids` = #{parentIds} , `area_id` = #{areaId} , `code` = #{code} , `name` = #{name} , `type` = #{type} , `grade` = #{grade} , `address` = #{address} , `zip_code` = #{zipCode} , `master` = #{master} , `phone` = #{phone} , `fax` = #{fax} , `email` = #{email} , `create_by` = #{createBy} , `create_date` = #{createDate} , `update_by` = #{updateBy} , `update_date` = #{updateDate} , `remarks` = #{remarks} , `del_flag` = #{delFlag}  
        WHERE 
        	id = #{id}  	        
    ]]>
	</update>

    <delete id="deleteById">
    <![CDATA[
        DELETE FROM sys_office WHERE
        `id` = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultType="Office">
		SELECT <include refid="sys-Office-columns" />
	    <![CDATA[
		    FROM sys_office 
	        WHERE 
		        `id` = #{id} 
	    ]]>
	</select>
	
	<sql id="Office-where">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="id">
				AND `id` = #{id}
			</if>
	       <if test="parentId">
				AND `parent_id` = #{parentId}
			</if>
	       <if test="parentIds">
				AND `parent_ids` = #{parentIds}
			</if>
	       <if test="areaId">
				AND `area_id` = #{areaId}
			</if>
	       <if test="code">
				AND `code` = #{code}
			</if>
	       <if test="name">
				AND `name` = #{name}
			</if>
	       <if test="type">
				AND `type` = #{type}
			</if>
	       <if test="grade">
				AND `grade` = #{grade}
			</if>
	       <if test="address">
				AND `address` = #{address}
			</if>
	       <if test="zipCode">
				AND `zip_code` = #{zipCode}
			</if>
	       <if test="master">
				AND `master` = #{master}
			</if>
	       <if test="phone">
				AND `phone` = #{phone}
			</if>
	       <if test="fax">
				AND `fax` = #{fax}
			</if>
	       <if test="email">
				AND `email` = #{email}
			</if>
	       <if test="createBy">
				AND `create_by` = #{createBy}
			</if>
	       <if test="createDateBegin != null">
				AND `create_date` >= #{createDateBegin}
		   </if>
		   <if test="createDateEnd != null">
				AND `create_date` &lt;= #{createDateEnd}
		   </if>
	       <if test="updateBy">
				AND `update_by` = #{updateBy}
			</if>
	       <if test="updateDateBegin != null">
				AND `update_date` >= #{updateDateBegin}
		   </if>
		   <if test="updateDateEnd != null">
				AND `update_date` &lt;= #{updateDateEnd}
		   </if>
	       <if test="remarks">
				AND `remarks` = #{remarks}
			</if>
	       <if test="delFlag">
				AND `del_flag` = #{delFlag}
			</if>
		</where>
	</sql>
		
    <select id="count" resultType="long">
        SELECT count(*) FROM sys_office 
		<include refid="Office-where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultType="Office">
		SELECT <include refid="sys-Office-columns" /> FROM (
			SELECT <include refid="sys-Office-columns" />
			FROM sys_office 
			<include refid="Office-where"/>
			
			<if test="sortColumns != null">
				ORDER BY ${sortColumns}
			</if>
		) limit #{offset}, #{pageSize}
    </select>
	
	<select id="list" resultType="Office">
    	SELECT <include refid="sys-Office-columns" />
	    FROM sys_office 
		<include refid="Office-where"/>
		
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
</mapper>

